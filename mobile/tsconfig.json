{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "types": ["jest", "expo-router"]
  },
  "include": [
    "app",
    "expo-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
